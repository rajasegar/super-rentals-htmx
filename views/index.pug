extends layout
block content
  .jumbo
    .right.tomster
    h2 Welcome to Super Rentals!
    p We hope you find exactly what you're looking for in a place to stay.
    a.button(href="/about") About Us
  .rentals
    label
      span Where would you like to stay?
      input(class="ember-text-field ember-view light", type="text")

    ul.results
      each rental in rentals
        li
          article.rental
            button.image(type="button")
              img(src=rental.attributes.image, alt="")
              small View Larger
            .details
              h3
                a(href='/rentals/' + rental.id) #{rental.attributes.title}
              .detail.owner
                span Owner:
                | #{rental.attributes.owner}
              .detail.type
                span Type:
                | #{rental.attributes.category}
              .detail.location
                span Location:
                | #{rental.attributes.city}
              .detail.bedrooms
                span Bedrooms:
                | #{rental.attributes.bedrooms}
            .map
              img(alt="", src="", width="150",height="150")
    
